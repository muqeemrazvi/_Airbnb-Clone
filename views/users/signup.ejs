<%layout("layout/boilerplat")-%>

<body>
<div class="col-8 offset-2">
  <h2>Sign Up</h2>

  <form method="post" action="/signup" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="username" class="form-label">username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
      />
    
</div>

<div class="mb-3">
    <label for="email" class="form-label">email</label>
    <input
      type="email"
      name="email"
      id="email"
      class="form-control"
      required
    />
  
</div>

<div class="mb-3">
    <label for="username" class="form-label">password</label>
    <input
      type="password"
      name="password"
      id="password"
      class="form-control"
      required
    />
  
</div>

<button class="btn btn-success">SignUp</button>
</form>
</div>
</body>
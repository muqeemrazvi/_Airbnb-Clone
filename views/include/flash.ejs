<%if(success && success.length){%>
<div
  class="alert alert-success alert-dismissible fade show col-4 offset-4 mt-3 p-2"
  role="alert"
>
  <h1 class="fs-6"><%=success %></h1>
  <button
    type="button"
    class="btn-close fs-6 p-3"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<%}%> <%if(error && error.length){%>
<div
  class="alert alert-danger alert-dismissible fade show col-4 offset-4 mt-3 p-2"
  role="alert"
>
  <h1 class="fs-6"><%=error %></h1>
  <button
    type="button"
    class="btn-close fs-6 p-3"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<%}%>
